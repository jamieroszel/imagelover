<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head") %>
    <%- include("partials/header") %>
</head>
  <body>
    <!-- THE HEADER TAG PARTIAL -->
    <main>
      <section class="hero is-info">
        <div class="hero-body">
          <p class="title has-text-centered is-size-1-fulldhd is-size-2-tablet is-size-3-mobile">Image Endless</p>
          <p class="subtitle has-text-centered">A place to store images you find on the web.</p>
          <figure class="image is-1by1">
            <img src="https://images.unsplash.com/photo-1456394555490-ef1bf0aedc46?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80">
          </figure>
        </div>
      </section>
    </main>
    <!-- THE HEAD TAG PARTIAL -->
  </body>
  <%- include("partials/footer") %>
  <script>
// mobile menu
const burgerIcon = document.querySelector('#burger');
const navbarMenu = document.querySelector('#nav-links');

burgerIcon.addEventListener('click', () => {
  navbarMenu.classList.toggle('is-active');
});

// tabs
const tabs = document.querySelectorAll('.tabs li');
const tabContentBoxes = document.querySelectorAll('#tab-content > div');

tabs.forEach(tab => {
  tab.addEventListener('click', () => {
    tabs.forEach(item => item.classList.remove('is-active'));
    tab.classList.add('is-active');

    const target = tab.dataset.target;
    // console.log(target);
    tabContentBoxes.forEach(box => {
      if (box.getAttribute('id') === target) {
        box.classList.remove('is-hidden');
      } else {
        box.classList.add('is-hidden');
      }
    })
  })
})
</script>
</html>

  